<style>
    .card {
        perspective: 1000px;
        transition: transform 0.5s;
    }

        .card:hover {
            transform: rotateX(18deg); 
        }
</style>

<div class="row">

    <div class="col-md-3 mx-4">
        <div class="card bg-primary text-white" style="width: 20rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Campaigns</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("CampaignSummary")
                </h3>
                <a asp-controller="Campaign" asp-action="Index" class="card-link text-white"><i class="fa-regular fa-eye"></i>Campaigns</a>
                <a asp-controller="Campaign" asp-action="Create" class="card-link text-white"><i class=" fa-solid fa-square-plus"></i>New Campaign</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mx-4">
        <div class="card bg-info text-white" style="width: 20rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Users</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("UserSummary")
                </h3>
                <a asp-controller="User" asp-action="Index" class="card-link text-white"><i class="fa-regular fa-eye"></i>Users</a>
                <a asp-controller="User" asp-action="Create" class="card-link text-white"><i class="fa-solid fa-user-plus"></i>New User</a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mx-4">
        <div class="card bg-danger text-white" style="width: 20rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Email Templates</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("TemplateSummary")
                </h3>
                <a asp-controller="EmailTemplate" asp-action="Index" class="card-link text-white"><i class="fa-regular fa-eye"></i>Templates</a>
                <a asp-controller="EmailTemplate" asp-action="Create" class="card-link text-white"><i class=" fa-solid fa-square-plus"></i>New Template</a>
            </div>
        </div>
    </div>

</div>

<div class="row my-3">

    <div class="col-md-3 mx-4">
        <div class="card bg-warning text-white" style="width: 20rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Submission Profiles</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("SubmissionProfileSummary")
                </h3>
                <a asp-controller="SubmissionProfile" asp-action="Index" class="card-link text-white"><i class="fa-regular fa-eye"></i>Profiles</a>
                <a asp-controller="SubmissionProfile" asp-action="Create" class="card-link text-white"><i class=" fa-solid fa-square-plus"></i>New Profile</a>
            </div>
        </div>
    </div>

</div>



