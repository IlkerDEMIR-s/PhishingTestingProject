@model EmailTemplate

<div class="text-center">
    <div class="display-6 my-3"><i class="fa-regular fa-envelope text-success"></i> Create Email Template</div>
    <hr class="my-4" style="border: 2px solid green; border-radius: 5px;">
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row">
            <div class="form-group my-3">
            <label asp-for="EmailTemplateName" class="control-label">Template Name</label>
            <input asp-for="EmailTemplateName" class="form-control" />
            </div>
    </div>
    <div class="row">
        <div class="form-group my-3">
            <label asp-for="EmailSubject" class="control-label">Subject</label>
            <input asp-for="EmailSubject" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="form-group my-3">
            <label asp-for="EmailContent" class="control-label">Content</label>
            <textarea asp-for="EmailContent" class="form-control" rows="4"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="form-group my-3">
            <label asp-for="LandingPageUrl" class="control-label">Landing Page Url</label>
            <input asp-for="LandingPageUrl" class="form-control" />
        </div>
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-success">
                <i class="fa fa-list"></i>
                Email Templates
            </a>
        </div>
    </div>
</form>


